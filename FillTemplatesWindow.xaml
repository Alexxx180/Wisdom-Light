<Window x:Class="WisdomLight.FillTemplatesWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:converters="clr-namespace:WisdomLight.Binds.Converters"
        xmlns:dpforms="clr-namespace:WisdomLight.Controls.Forms.DocumentForm"
        mc:Ignorable="d"
        x:Name="DisciplineProgramWindow"
        Icon="/Resources/Images/Icons/Wisdom3.ico"
        Title="{Binding Path=FileName, StringFormat={}Редактирование: {0}}"
        Width="640" Height="480"
        MinWidth="320" MinHeight="200"
        Closing="OnClosing">
    <Window.DataContext>
        <Binding RelativeSource="{RelativeSource Self}"/>
    </Window.DataContext>

    <Grid>
        <Grid.DataContext>
            <Binding Path="ViewModel"/>
        </Grid.DataContext>
        
        <Grid.RowDefinitions>
            <RowDefinition Height="24"/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <DockPanel Background="#FF002FA7">
            <Menu>
                <MenuItem Header="Файл">
                    <MenuItem Header="Создать" />
                    <MenuItem Header="Открыть..." />
                    <Separator/>
                    <MenuItem Header="Сохранить" />
                    <MenuItem Header="Сохранить как" />
                    <MenuItem Header="Экспорт" />
                    <Separator/>
                    <MenuItem Header="Выход" />
                </MenuItem>
                <MenuItem Header="Настройки">
                    <MenuItem Header="Продвинутый" IsCheckable="True" />
                </MenuItem>
                <MenuItem Header="Справка"/>
            </Menu>
            
            <TextBox FontSize="14" DockPanel.Dock="Right">
                <TextBox.Style>
                    <StaticResource ResourceKey="NameBoxDark"/>
                </TextBox.Style>
                <TextBox.Text>
                    <Binding ElementName="DisciplineProgramWindow" Path="FileName"/>
                </TextBox.Text>
            </TextBox>
        </DockPanel>


        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="25"/>
                <ColumnDefinition/>
                <ColumnDefinition Width="25"/>
            </Grid.ColumnDefinitions>

            <Grid.RowDefinitions>
                <RowDefinition Height="25"/>
                <RowDefinition/>
                <RowDefinition Height="25"/>
            </Grid.RowDefinitions>

            <TabControl Grid.Row="1" Grid.Column="1">
                <TabItem Header="Информация">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition/>
                            <ColumnDefinition Width="30"/>
                        </Grid.ColumnDefinitions>

                        <ToolBarTray Grid.Column="2"  VerticalAlignment="Bottom" Orientation="Vertical">
                            <ToolBar Width="30">
                                <Button Height="30" FontSize="12" MinWidth="25">
                                    <Button.Style>
                                        <StaticResource ResourceKey="Steps2"/>
                                    </Button.Style>

                                    <TextBlock Text="+" />
                                </Button>

                                <Button Height="30" FontSize="12" MinWidth="25">
                                    <Button.Style>
                                        <StaticResource ResourceKey="Steps"/>
                                    </Button.Style>

                                    <TextBlock Text="x" />
                                </Button>

                                <Button Height="30" FontSize="12"  MinWidth="25">
                                    <Button.Style>
                                        <StaticResource ResourceKey="Steps2"/>
                                    </Button.Style>

                                    <TextBlock Text="[S]" />
                                </Button>

                                <Button Click="Create_Click" Height="30"  MinWidth="25" FontSize="12">
                                    <Button.Style>
                                        <StaticResource ResourceKey="Steps"/>
                                    </Button.Style>

                                    <TextBlock Text="v" />
                                </Button>
                            </ToolBar>
                        </ToolBarTray>

                        <ContentControl Template="{StaticResource InformationTab}" DataContext="{Binding Information}"/>
                    </Grid>
                    
                </TabItem>

                <TabItem Header="Документы">
                    <ContentControl Template="{StaticResource DocumentsTab}" DataContext="{Binding Documents}"/>
                </TabItem>
            </TabControl>

            
        </Grid>
        
    </Grid>
</Window>