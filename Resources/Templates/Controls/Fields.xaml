<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <ControlTemplate x:Key="FieldTypeSelector">
        <Grid Height="35">
            <Grid.Resources>
                <Style TargetType="TextBox">
                    <Setter Property="FontSize" Value="20"/>
                </Style>
            </Grid.Resources>

            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="100" />
                <ColumnDefinition />
            </Grid.ColumnDefinitions>
            
            <UniformGrid Grid.Column="1" Columns="2">
                <TextBox Style="{StaticResource NameBoxLight}">
                    <TextBox.Text>
                        <Binding Path="Source" Mode="TwoWay">
                            <Binding.UpdateSourceTrigger>
                                LostFocus
                            </Binding.UpdateSourceTrigger>
                        </Binding>
                    </TextBox.Text>
                </TextBox>

                <ComboBox>
                    <ComboBox.SelectedItem>
                        <Binding Path="Source" Mode="TwoWay">
                            <Binding.UpdateSourceTrigger>
                                PropertyChanged
                            </Binding.UpdateSourceTrigger>
                        </Binding>
                    </ComboBox.SelectedItem>
                    <ComboBox.ItemsSource>
                        <Binding Path="Expressions"/>
                    </ComboBox.ItemsSource>
                </ComboBox>
            </UniformGrid>
        </Grid>
    </ControlTemplate>

    <ControlTemplate x:Key="DocumentPathField">
        <Grid Height="35">
            <Grid.Resources>
                <Style TargetType="TextBox">
                    <Setter Property="FontSize" Value="20"/>
                </Style>
            </Grid.Resources>

            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="100" />
                <ColumnDefinition />
            </Grid.ColumnDefinitions>

            <TextBox Style="{StaticResource NameBoxLight}">
                <TextBox.Text>
                    <Binding Mode="TwoWay">
                        <Binding.UpdateSourceTrigger>
                            LostFocus
                        </Binding.UpdateSourceTrigger>
                    </Binding>
                </TextBox.Text>
            </TextBox>
        </Grid>
    </ControlTemplate>

    <ControlTemplate x:Key="DocumentPathText">
        <Grid Height="35">
            <Grid.Resources>
                <Style TargetType="TextBlock">
                    <Setter Property="FontSize" Value="20"/>
                </Style>
            </Grid.Resources>

            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="100" />
                <ColumnDefinition />
            </Grid.ColumnDefinitions>

            <TextBlock Text="{Binding}" Style="{StaticResource NameBoxLight}"/>
        </Grid>
    </ControlTemplate>
</ResourceDictionary>