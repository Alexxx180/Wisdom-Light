<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <ControlTemplate x:Key="TypeSelector">
        <TextBlock Text="{Binding Type}" />
    </ControlTemplate>

    <ItemContainerTemplate x:Key="FieldTypeSelector">
        <Grid Margin="25, 0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition />
                <ColumnDefinition Width="60" />
            </Grid.ColumnDefinitions>

            <TextBox Style="{StaticResource NameBoxLight}">
                <TextBox.Text>
                    <Binding Path="Source" Mode="TwoWay">
                        <Binding.UpdateSourceTrigger>
                            LostFocus
                        </Binding.UpdateSourceTrigger>
                    </Binding>
                </TextBox.Text>
            </TextBox>

            <ComboBox Grid.Column="1">
                <ComboBox.ItemTemplate>
                    <ItemContainerTemplate>
                        <TextBlock Text="{Binding Type}" />
                    </ItemContainerTemplate>
                </ComboBox.ItemTemplate>
                <ComboBox.SelectedItem>
                    <Binding Path="Source" Mode="TwoWay">
                        <Binding.UpdateSourceTrigger>
                            PropertyChanged
                        </Binding.UpdateSourceTrigger>
                    </Binding>
                </ComboBox.SelectedItem>
                <ComboBox.ItemsSource>
                    <Binding Path="Expressions"/>
                </ComboBox.ItemsSource>
            </ComboBox>
        </Grid>
    </ItemContainerTemplate>

    <ControlTemplate x:Key="DocumentPathField">
        <Grid Height="25">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="25" />
                <ColumnDefinition />
            </Grid.ColumnDefinitions>

            <TextBox Style="{StaticResource NameBoxLight}">
                <TextBox.Text>
                    <Binding Mode="TwoWay">
                        <Binding.UpdateSourceTrigger>
                            LostFocus
                        </Binding.UpdateSourceTrigger>
                    </Binding>
                </TextBox.Text>
            </TextBox>
        </Grid>
    </ControlTemplate>

    <ControlTemplate x:Key="DocumentPathText">
        <Grid Height="25">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="25" />
                <ColumnDefinition />
            </Grid.ColumnDefinitions>

            <TextBlock Text="{Binding}" Style="{StaticResource NameBoxLight}"/>
        </Grid>
    </ControlTemplate>
</ResourceDictionary>